<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <display-name>Kheops Zipper</display-name>
        <!--suppress ServletWithoutMappingInspection -->
        <servlet-name>online.kheops.zipper.ZipperApplication</servlet-name>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>online.kheops.zipper.ZipperApplication</param-value>
        </init-param>
    </servlet>

    <context-param>
        <description>Base URI for the pacs</description>
        <param-name>online.kheops.pacs.uri</param-name>
        <param-value>https://itmi.kheops.online/dicomweb</param-value>
    </context-param>
    <context-param>
        <description>Base URI for the authentication server</description>
        <param-name>online.kheops.auth_server.uri</param-name>
        <param-value>https://itmi.kheops.online/authorization</param-value>
    </context-param>
 
</web-app>
